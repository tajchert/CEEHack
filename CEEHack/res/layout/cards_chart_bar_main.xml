<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:id="@+id/PartyTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/partyLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/pologo" />

        <LinearLayout
            android:id="@+id/PartyAndIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/partytitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Platforma Obywatelska"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/Icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/WebIcons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/Webogo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/computer_icon" />

                    <TextView
                        android:id="@+id/WebTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="1dp"
                        android:fontFamily="sans-serif"
                        android:text="WWW"
                        android:textColor="#4F4F4F"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/FBIcons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/FBogo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/facebook_icon" />

                    <TextView
                        android:id="@+id/FBTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="1dp"
                        android:fontFamily="sans-serif"
                        android:text="Facebook"
                        android:textColor="#4F4F4F"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TwittIcons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/Twittogo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/twitt_icon" />

                    <TextView
                        android:id="@+id/TwittTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="1dp"
                        android:fontFamily="sans-serif"
                        android:text="Twitter"
                        android:textColor="#4F4F4F"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/topseparator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/PartyTop"
        android:layout_margin="7dp"
        android:layout_marginTop="8dp"
        android:background="#4A4A4A" />

    <TextView
        android:id="@+id/obietniceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topseparator"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/party_obietnice"
        android:textColor="#4F4F4F"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/bottomLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/obietniceTitle"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/graphs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >

            <TextView
                android:id="@+id/titleOne"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/barTop"
                android:layout_alignTop="@+id/barTop"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="20%"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/barTop"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/titleOne"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/titleTwo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/barSec"
                android:layout_alignTop="@+id/barSec"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="20%"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/barSec"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/barTop"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/titleTwo"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/titleThree"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/barThree"
                android:layout_alignTop="@+id/barThree"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="20%"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/barThree"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/barSec"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/titleThree"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottomSep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bottomLay"
        android:layout_margin="7dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/IconsBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomSep"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/FirstIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/FirstIcon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/FirstTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="sans-serif"
                android:text="Zrealizowane"
                android:textColor="#4F4F4F"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/SecIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/SecIcon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/SecTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="sans-serif"
                android:text="Niezrealizowane"
                android:textColor="#4F4F4F"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ThreeIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ThreeIcon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/ThreeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="sans-serif"
                android:text="Nie weryfikowalne"
                android:textColor="#4F4F4F"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>